{% block body %}
    <div class="new-book">
        <form method="POST" action="{{ path('save_book') }}" class="">
            <div class="title-item">
                <label>
                    <input type="text" name="title" placeholder="title" autocapitalize="words" required/>
                </label>
            </div>

            <div class="author-item">
                <label>
                    <input type="text" name="author" placeholder="author" autocapitalize="words" required/>
                </label>
            </div>

            <div class="type-item">
                <label>
                    <select name="type">
                        <option value="">—Type—</option>
                        {% for type in types %}
                            <option value="{{ type.id }}"> {{ type.name }} </option>
                        {% endfor %}
                    </select>
                </label>
            </div>

            <div class="note-item">
                <label>
                    <select name="note">
                        <option value="">—Note—</option>
                        {% for note in notes %}
                            <option value="{{ note.id }}"> {{ note.legend }}</option>
                        {% endfor %}
                    </select>
                </label>
            </div>

            <div class="finished-at-item">
                <label>
                    <input type="date" name="finished_at" placeholder="date"/>
                </label>
            </div>

            <div>
                <label>
                    <button type="submit">add</button>
                </label>
            </div>
        </form>
    </div>
{% endblock %}
