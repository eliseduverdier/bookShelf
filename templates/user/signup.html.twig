{% extends('base.html.twig') %}

{% block title %}ðŸ¤· Sign up{% endblock %}

{% block content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form method="POST" name="{{ path('save_user') }}" id="login" class="card card-background">
        <div>
            <label>
                <input value="{{ last_username }}" type="text" name="_username" placeholder="username" />
            </label>
        </div>
        <div>
            <label>
                <input value="" type="password" name="_password" placeholder="password" />
                <span class="see-password">(see)</span>
            </label>
        </div>
        <div>
            <button type="submit">Sign up</button>
        </div>
    </form>


    <script>
        document.querySelector('.see-password').addEventListener('click', function() {
            var password = document.querySelector('input[name="password"]');
            if (password.getAttribute('type') === 'password') {
                password.setAttribute('type', 'text');
            } else {
                password.setAttribute('type', 'password');
            }
        });
    </script>

{% endblock %}
