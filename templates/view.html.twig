{% extends 'base.html.twig' %}

{% block title %}📖 {{ book.title }}{% endblock %}

{% block mainTitle %}{{ book.title }}{% endblock %}

{% block content %}
    <p>
        By: <strong>{{ book.author }}</strong>
    </p>
    <p>
        Type: <span class="badge {{ book.type.name }}">{{ book.type.name }}</span>
    </p>
    <p>
        Note: <span class="badge note_{{ book.note.id }}"
                    title="{{ book.note.legend }}">{{ book.note.legend }}</span>
    </p>
    <p>
        Finished at: <strong>{{ book.finished_at ? book.finished_at|date('Y⋅m⋅d') : 'currently reading' }}</strong>
    </p>
    {% if book.has_private_summary %}
        🗝️
    {% else %}
        <hr>
        <p id="summary">
            {{ book.summary|replace({'\n': '<br>'})|raw }}
        </p>
    {% endif %}
{% endblock %}
